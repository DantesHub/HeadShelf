  <%= form_with(model: titan, local: true) do |form| %>
  <% if titan.errors.any? %>
  <% titan.errors.full_messages.each do |error| %>
  <%= alert_generator error %>
  <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: 10%>
  </div>


    <h2>Their Bookshelf</h2>
    <div>
    <%= form.fields_for :titan_books do |titanbook_form|  %>
      <%= render 'titan_book_fields', f: titanbook_form %>
    <% end %>
    <div>
     <%= link_to_add_association 'Add Book', form, :titan_books %>
    </div>
</div>
  <div class="form-group">
    <label class="btn btn-primary">
      Upload Main Image File
      <%= form.file_field :main_image, style: 'display:none'; %>
    </label>
  </div>
  <div class="form-group">
    <label class="btn btn-primary">
      Upload Thumb Image File
      <%= form.file_field :thumb_image, style: 'display:none';  %>
    </label>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
  <% end %>