<%= form_with(model: book, local: true) do |form| %>
<% if book.errors.any? %>
  <% book.errors.full_messages.each do |error| %>
        <%= js add_gritter(error, :title => "Brain Stack", sticky: false, time: 1000) %>
     <% end %>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

<div class = "form-group">
      <%= form.label :tag_list %>
      <%= form.text_area :tag_list, class: 'form-control', rows: 1%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
