<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], :title => "Brain Stack", sticky: true, time: 1000) %>
  <% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], :title => "Brain Stack", sticky: true, time: 1000) %>
  <% else %>
    <%= js add_gritter(flash[:notice], :title => "Brain Stack", sticky: true, time: 1000) %>
<% end %>