  <%= form_with(model: titan, local: true) do |form| %>
<% if titan.errors.any? %>
  <% titan.errors.full_messages.each do |error| %>
        <%= js add_gritter(error, :title => "Brain Stack", sticky: false, time: 1000) %>
     <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: 20%>
  </div>

  <div class="form-group">
  <label class = "btn btn-primary">
  Upload Main Image File
      <%= form.file_field :main_image, style: 'display:none'; %>
  </label>
  </div>
  <div class="form-group">
    <label class= "btn btn-primary">
    Upload Thumb Image File
    <%= form.file_field :thumb_image, style: 'display:none';  %>
    </label>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
  <% end %>